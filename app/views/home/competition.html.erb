<div class="default-container">

  <%= render "home/countdown_timer" %>

  <div class="row contestants">
    <% @designs.each do |design| %>
    <div class="col-xs-6 col-md-3">
      <div class="thumbnail thumbnail-custom">
        <img src="<%= asset_path design.image_url(:product) %>" alt="" />
        <div class="caption">
          <div class="row design-detail">
            <span class="like-design">
              <%= link_to like_design_path(design), method: :put do %>
              <i class="fa fa-heart" aria-hidden="true"></i>
              <% end %>
            </span>
            <span class="designer-name">
              <a href="<%= user_path design.user.slug %>">
                <%= design.user.first_name[0..8]%> <%= design.user.last_name[0..10]%>
              </a>
            </span>
          </div>

          <!-- <div class="row design-name"> -->
            <!-- I need this to add design name to design -->
            <!-- <p>by: design-name</p> -->
          <!-- </div> -->
          <div class="design-votes">
            <%= design.get_upvotes.size %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
