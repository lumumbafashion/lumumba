<div class="default-container">

  <%= render "home/countdown_timer" %>

  <div class="row contestants">
    <% @designs.each do |design| %>
      <div class="col-xs-12 col-md-3">
        <div class="thumbnail thumbnail-custom">
          <img src="<%= asset_path design.image_url(:product) %>" alt="" />
          <div class="caption">
            <div class="row design-detail">
              <p class="designer-name">
                <a href="<%= design_path design %>">
                  <%= design.user.to_s %>
                </a>
              </p>
              <span class="like-design">
                <%= link_to like_design_path(design), method: :put do %>
                  <% if design.liked_by current_user %>
                    <i class="fa fa-heart" aria-hidden="true"></i>
                  <% else %>
                    <i class="fa fa-heart-o" aria-hidden="true"></i>
                  <% end %>
                <% end %>
                <%= link_to unlike_design_path(design), method: :put do %>
                <i class="fa fa-thumbs-down" aria-hidden="true" style="color:#db3236"></i>
                <% end %>
              </span>
            </div>

            <div class="design-votes">
              <%= design.votes.count %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
