<div class="default-container">
  <div class="row winners">
    <%= render "latest_products"%>
  </div>
  <div class="row">
    <h1 style="text-align: center;">Shop Now</h1>
  </div>
  <div class="row products">
    <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-6 col-md-4 product">
        <div class="thumbnail thumbnail-custom">
          <img src="<%= asset_path product.main_image_url(:product) %>" alt="" />
          <div class="caption">
            <div class="product-detail">
              <span class="product-title">
                <a href="/products/<%= product.id %>">
                  <h5><%= product.name[1...10] %></h5>
                </a>
              </span>
              <span class="product-price">
                â‚¬ <%= product.price %>
              </span>
            </div>
            <a href="/products/<%= product.id %>" class="btn btn-primary cart-button" role="button">ADD TO CART</a>
      </div>
    </div>
  </div>
  <% end %>
</div>
  </div>
</div>
