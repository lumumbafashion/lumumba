<div class="default-container">
  <div class="row winners">
    <%= render "latest_products"%>
  </div>
  <div class="row products" id="products" style="margin-top: 75px;">
    <div class="row">
      <% @products.each do |product| %>
      <div class="col-xs-6 col-md-3">
          <div class="thumbnail thumbnail-custom">
            <a href="<%= product_path product.id %>">
            <img src="<%= asset_path product.main_image_url(:product) %>" alt="" />
          </a>
            <div class="caption">
              <div class="product-detail">
                <div class="row product-title">
                <a href="/products/<%= product.id %>">
                  <h5><%= product.name %></h5>
                </a>

                </div>
                <div class="row product-price">
                  â‚¬<%= product.price %>
                </div>
              </div>
              <!-- <a href="/products/<%= product.id %>" class="btn button_blue cart-button" role="button">ADD TO CART</a> -->
            </div>
          </div>

      </div>
      <% end %>
    </div>
  </div>
</div>
