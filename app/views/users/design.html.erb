<div class="default-container" style="margin-bottom: 75px">
  <% if current_user  %>
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <%= render "left_menu" %>
        </div>
        <div class="col-md-8">
          <div class="row profile-top">
            <%= render "profile_top"%>
          </div>
          <div class="row">
            <div class="row">
              <%= render 'add_design_button' %>
            </div>
            <div class="user-page-content">
              <% if @designs.empty? %>
                <% # show nothing in particular %>
              <% else %>
                <%= render 'my_designs' %>
              <% end %>
              <%= paginate @designs %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
