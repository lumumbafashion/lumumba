    <title>Lumumba</title>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet" type="text/css">

    <link rel='shortcut icon' href='<%= asset_path "favicon.ico"%>' type='image/x-icon'/ >
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="">

    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-K89SNHD"
      height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>

    <div>

      <%= cloudinary_js_config if Lumumba::Application.should_use_cloudinary? %>
      <%= render "layouts/main_navbar" %>

    </div>

    <div class="layout-wrapper">

      <div class="flash-error <%= 'homepage-error' if current_page?('/') %>">
        <% flash.each_with_index do |(type, content), index| %>
          <% next if type.to_s.include?('html_safe') %>
          <% messages = Array(content).select(&:present?) %>
          <% messages.each do |message| %>
            <div class="fade in alert <%= alert_class_for(type) %>" style="<%= 'margin-bottom: 70px' if index == flash.to_a.size - 1 %>">
              <button class='close' data-dismiss="alert">x</button>
              <% is_html_safe = flash["#{type}_html_safe"] %>
              <%= message.send(is_html_safe ? :html_safe : :presence) %>
            </div>
          <% end %>
        <% end %>
      </div>

      <%= yield %>
    </div>

    <%= render "layouts/footer"%>

  </div>

